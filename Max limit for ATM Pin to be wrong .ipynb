    "pin=input(\"Enter your pin** \")\n",
    "attempt =1\n",
    "while pin!=\"555\":   #pin is already defined \n",
    "    if attempt >=3:\n",
    "        sys.exit(\"You have entered three wrong pin , please visit nearest branch\")\n",
    "    pin =input(\"Try again for pin \")\n",
    "    attempt +=1\n",
    "print(\"correct pin\")"
